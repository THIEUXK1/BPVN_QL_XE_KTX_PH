@{
    ViewData["Title"] = "Đăng Nhập";
    Layout = "~/Areas/XE/Views/Shared/_Layout.cshtml";
}

<h1>Đăng Nhập</h1>

<div class="row justify-content-center">
    <div class="col-md-4">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form method="post" action="/CheckTK">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="email">Email:</label>
                <input type="text" id="email" name="email" class="form-control" placeholder="Nhập email" required />
            </div>

            <div class="form-group">
                <label for="matkhau">Mật khẩu:</label>
                <input type="password" id="matkhau" name="matkhau" class="form-control" placeholder="Nhập mật khẩu" required />
            </div>

            <button type="submit" class="btn btn-primary btn-block mt-2">Đăng Nhập</button>
        </form>
    </div>
</div>
